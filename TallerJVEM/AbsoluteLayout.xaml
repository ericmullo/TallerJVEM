<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerJVEM.AbsoluteLayoutPage"
             Title="Absolute Layout">
    <AbsoluteLayout>
       
        <ScrollView AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout Padding="20" Spacing="20">
                <BoxView Color="Blue" WidthRequest="150" HeightRequest="150" />
                <BoxView Color="Green" WidthRequest="150" HeightRequest="150" />
                <BoxView Color="Red" WidthRequest="150" HeightRequest="150" />
                <BoxView Color="Purple" WidthRequest="150" HeightRequest="150" />
                <Label Text="Trabajo Josue y Eric" FontSize="20" TextColor="Black" HorizontalOptions="Center" />
            </VerticalStackLayout>
        </ScrollView>

        
        <Button Text="Ir a GridLayout"
                AbsoluteLayout.LayoutBounds="1, 1, -1, -1"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="DarkOrange"
                TextColor="White"
                Clicked="OnNavigateToGridLayout" />
    </AbsoluteLayout>
</ContentPage>
