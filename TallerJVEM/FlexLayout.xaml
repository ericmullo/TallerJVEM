<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerJVEM.FlexLayoutPage"
             Title="Flex Layout">
    <FlexLayout Direction="Column" JustifyContent="Start" AlignItems="Start" Padding="10">
        <Image Source="image1.png" HeightRequest="50" WidthRequest="50"/>
        <Label Text="Primera Imagen" VerticalOptions="Center"/>
        <Image Source="image2.png" HeightRequest="50" WidthRequest="50"/>
        <Label Text="Segunda Imagen" VerticalOptions="Center"/>
        <Button Text="Ir a AbsoluteLayout" Clicked="OnNavigateToAbsoluteLayout"/>
    </FlexLayout>
</ContentPage>
