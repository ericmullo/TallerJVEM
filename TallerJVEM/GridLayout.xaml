<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerJVEM.GridLayoutPage"
             Title="Grid Layout">
    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
        <BoxView Grid.Row="0" Grid.Column="0" Color="Red"/>
        <BoxView Grid.Row="0" Grid.Column="1" Color="Blue"/>
        <BoxView Grid.Row="1" Grid.Column="0" Color="Green"/>
        <Button Grid.Row="1" Grid.Column="1" Text="Ir a StackLayout" Clicked="OnNavigateToStackLayout"/>
    </Grid>
</ContentPage>
