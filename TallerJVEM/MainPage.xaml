<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerJVEM.MainPage"
             Title="Main Page">
    <VerticalStackLayout Padding="20">
        <Label 
            Text="Bienvenido a TallerJVEM" 
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="24"/>
        <Button 
            Text="Ir a GridLayout"
            Clicked="OnNavigateToGridLayout"/>
        <Button 
            Text="Ir a StackLayout"
            Clicked="OnNavigateToStackLayout"/>
        <Button 
            Text="Ir a FlexLayout"
            Clicked="OnNavigateToFlexLayout"/>
        <Button 
            Text="Ir a AbsoluteLayout"
            Clicked="OnNavigateToAbsoluteLayout"/>
    </VerticalStackLayout>
</ContentPage>
